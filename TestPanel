import java.awt.geom.Line2D.Double;
import java.util.ArrayList;
import java.util.Random;
import javax.swing.*;
import javax.swing.event.MouseInputListener;

public class MyPanel extends JPanel implements MouseInputListener {
	
	protected MyPanel(int width, int height, Color bgColor){
		//Setup the panel that will hold the graphics
		setPreferredSize(new Dimension(width, height));
		setBackground(bgColor);
		
		//Makes Label
		JLabel label = new JLabel("Temp Label");
		
		//Makes Button
		JButton button = new JButton();
		button.setText("Temp Button,\nDont Push");
				
		this.add(label);
		this.add(button);	
		
		//Declare string you want to be a JComboBox
		String[] tempString = {"Black","White","Blue","Red"};
		//Make Variable that is JComboBox to store newly made JComboBox
		JComboBox<String> layer1Colors = new JComboBox<>();
		//Store the JComboBox make with BasicNoEditComboBox into JComboBox
		layer1Colors = BasicNoEditComboBox.NEComboBox(tempString);
		//Adds the JComboBox to the panel
		this.add(layer1Colors);
		
				
				
		if(layer1Colors.equals("Blue"))
		{
			System.out.println("Color selected is White.");
			label.setForeground(Color.blue);;
		}
		
	}

	@Override
	public void mouseClicked(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseEntered(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseExited(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mousePressed(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseReleased(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseDragged(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseMoved(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

}
